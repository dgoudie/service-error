{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": ["node", "jest"],
        "strict": true,
        "plugins": [
            {
                "transform": "ts-auto-mock/transformer",
                "cacheBetweenTests": false
            }
        ]
    },
    "lib": ["es2015"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
